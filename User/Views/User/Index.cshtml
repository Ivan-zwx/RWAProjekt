@model DAL.Models.User

@{
    ViewBag.Title = "Index";
}

<div class="container p-3">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayName("Ime")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayName("Kreiran")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt>
            @Html.DisplayName("Telefon")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayName("Adresa")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>
    @Html.ActionLink("Uredi", "Edit", "User", new { @o = "" }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Obriši", "Delete", "User", new { @o = "" }, new { @class = "btn btn-danger" })
</div>
