@model IEnumerable<DAL.Models.Review>

@{
    ViewBag.Title = "ApartmentReviews";
}

<h2>ApartmentReviews</h2>

<style>
    #review-container {
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        gap: 30px;
        width: 90%;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>

<div id="review-container" class="p-2 m-auto">
    @foreach (var ar in Model)
    {
        <div class="card" style="width: 20rem;">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">Korisnik: @ar.UserName</p>
                <p class="card-text">Ocjena: @ar.Stars</p>
                <p class="card-text">Komentar: @ar.Details</p>
            </div>
        </div>
    }
</div>